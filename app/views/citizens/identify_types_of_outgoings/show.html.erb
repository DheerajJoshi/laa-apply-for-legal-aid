<%= page_template page_title: t('.page_heading'), template: :basic do %>
  <%= form_with(model: @legal_aid_application, url: citizens_identify_types_of_outgoing_path, method: :patch, local: true) do |form| %>

    <%= govuk_form_group show_error_if: @legal_aid_application.errors.present? do %>
      <%= govuk_fieldset_header page_heading, padding_below: 0 %>

      <%= transaction_type_check_boxes(
            form: form,
            transaction_types: TransactionType.debits
          ) %>
    <% end %>

    <%= next_action_buttons(form: form) %>
  <% end %>
<% end %>
