<% content_for :navigation do %>
  <%= link_to t('generic.back'), citizens_consent_path, class: 'govuk-back-link', id: 'back' %>
<% end %>

<% if @worker_working %>

  <div class="worker-waiter" data-worker-id="<%= @worker_id %>" align="center">
    <%= image_tag('loading.gif') %>
    <p class="govuk-body-l"><%= t '.retrieving_transactions' %></p>
  </div>

<% else %>

  <%= render partial: 'accounts' %>

<% end %>
