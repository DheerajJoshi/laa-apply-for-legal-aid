<%= page_template page_title: t('.heading_1'), back_link: :none do %>
  <p class="govuk-body">
    <%= t('.name') %>
    <b><%= current_applicant.first_name %></b>
    <b><%= current_applicant.last_name %></b>
    <br />
    <%= t('.case_reference') %>
    <b><%= current_applicant.legal_aid_application.application_ref %></b>
  </p>

  <p class="govuk-body"><%= t('.financial_situation_para') %></p>

  <p class="govuk-body"><%= t('.legal_cost_para') %></p>

  <p class="govuk-body govuk-!-font-weight-bold"><%= t('.what_you_will_need') %></p>

    <%= list_from_translation_path 'citizens.legal_aid_applications.index' %>

  <%= link_to t('generic.start'), forward_path, class: 'govuk-button govuk-button--start', id: 'start' %>
<% end %>
