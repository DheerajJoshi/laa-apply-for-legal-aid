<% content_for :navigation do %>
    <%= link_to t('generic.back'), new_citizens_additional_account_path, class: 'govuk-back-link', id: 'back' %>
<% end %>

<%= render partial: 'shared/forms/error_summary', locals: { model: @form } %>

