<%= page_template page_title: t('.heading', label: @benefit_type.label.humanize) do %>

  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= BenefitType.human_attribute_name(:description) %>
      </dt>
      <dd class="govuk-summary-list__value">
        <%= @benefit_type.description %>
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= BenefitType.human_attribute_name(:exclude_from_gross_income) %>
      </dt>
      <dd class="govuk-summary-list__value">
        <%= @benefit_type.exclude_from_gross_income %>
      </dd>
    </div>
  </dl>

  <%= link_to t('generic.edit'), edit_admin_benefit_type_path(@benefit_type) %> |
  <%= link_to t('generic.list'), admin_benefit_types_path %>
<% end %>
