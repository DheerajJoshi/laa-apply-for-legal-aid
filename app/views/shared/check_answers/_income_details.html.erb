<section>
  <table class="govuk-table">
    <tbody>
    <% {
           benefits: :monthly_state_benefits,
           family_help: :mei_friends_or_family,
           maintenance_in: :mei_maintenance_in,
           property_or_lodger: :mei_property_or_lodger,
           student_loan: :mei_student_loan,
           pension: :mei_pension
       }.each do |name, value_method|
    %>
      <%= render 'shared/means_report/item', name: name, scope: 'income', value_method: value_method %>
    <% end  %>

    <%= render 'shared/means_report/total', name: 'total_income', scope: 'income', value_method: :total_gross_income_assessed %>
    </tbody>
  </table>
</section>
