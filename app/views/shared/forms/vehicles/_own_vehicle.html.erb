<%= form_with(model: @form, url: form_path, method: :patch, local: true) do |form| %>

  <%= form.govuk_collection_radio_buttons(
        :own_vehicle,
        [true, false],
        title: content_for(:page_title)
      ) %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>
<% end %>
