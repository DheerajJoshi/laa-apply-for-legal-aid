<fieldset class="govuk-fieldset" aria-describedby="select-all-that-apply-hint">
      <%= govuk_fieldset_header page_title %>
      <div class="govuk-!-padding-top-4"></div>

      <span id="waste-hint" class="govuk-hint"><%= t('generic.select_all_that_apply') %></span>

      <%= render 'shared/show_errors' %>

      <div class="govuk-checkboxes">
        <div class="deselect-group" data-deselect-ctrl="[name='legal_aid_application[none_selected]']">
          <%= render partial: 'shared/forms/check_boxes', locals: { field_name: :citizen_uses_online_banking, label: citizen_uses_online_banking, govuk_hint: citizen_uses_online_banking_hint, form: form, checked: 'true', unchecked: '' } %>
          <%= render partial: 'shared/forms/check_boxes', locals: { field_name: :provider_received_citizen_consent, label: provider_received_citizen_consent, govuk_hint: provider_received_citizen_consent_hint, form: form, checked: 'true', unchecked: '' } %>
        </div>
      </div>

      <div class="govuk-radios__divider tickbox_divider"><%= t('generic.or') %></div>

      <div class="govuk-checkboxes">
        <div class="govuk-checkboxes__item">
          <%= form.check_box :none_selected, { class: 'govuk-checkboxes__input' }, 'true', @form.none_selected %>
          <%= form.label :none_selected, none_selected, class: 'govuk-label govuk-checkboxes__label' %>
        </div>
      </div>

</fieldset>
