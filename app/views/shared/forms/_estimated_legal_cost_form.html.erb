<%= form_with(model: model, url: url, method: :patch, local: true) do |form| %>

  <%= govuk_form_group(
        show_error_if: form.object.errors[:estimated_legal_cost].present?,
        input: :estimated_legal_cost
      ) do %>

    <h1 class="govuk-heading-xl"><%= content_for(:page_title) %></h1>

    <%= form.govuk_text_field :estimated_legal_cost,
                              label: nil,
                              hint: t('helpers.hint.merits_assessment.estimated_legal_cost'),
                              value: number_to_currency_or_original_string(model.estimated_legal_cost),
                              input_prefix: t('currency.gbp'),
                              class: 'govuk-!-width-one-third' %>
  <% end %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>

<% end %>
