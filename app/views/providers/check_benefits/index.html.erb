<%= content_for(:panel) do %>
  <div class="govuk-panel govuk-panel--confirmation">
    <h2 class="govuk-panel__title">
      <%= @legal_aid_application.applicant.full_name %>
      <br />
      <%= t "#{result_namespace}.title" %>
    </h2>
  </div>
<% end %>

<%= page_template page_title: t('.heading_1') do %>

  <p class="govuk-body">
    <%= t "#{result_namespace}.body" %>
  </p>

  <h3 class="govuk-heading-m">
    <%= t '.heading_2' %>
  </h3>

  <p class="govuk-body">
    <%= t "#{result_namespace}.next" %>
  </p>

  <%= next_action_buttons_with_form(
        url: providers_legal_aid_application_check_benefit_path,
        method: :patch,
        show_draft: true,
        continue_button_text: t('generic.continue')
      ) %>
<% end %>
