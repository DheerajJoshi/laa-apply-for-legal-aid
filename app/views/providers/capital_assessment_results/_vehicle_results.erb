<% if @cfe_result.vehicles? %>
  <div id="accordion-with-summary-sections-content-1" class="govuk-accordion__section-content" aria-labelledby="accordion-with-summary-sections-heading-1">
    <h2 class="govuk-heading-m"><%= t('.vehicles') %></h2>
    <table class="govuk-table" >
      <tbody>
      <%= render partial: 'results_detail_row', locals: { caption: t('.value'), value: number_to_currency(@cfe_result.vehicle_value) } %>
      <%= render partial: 'results_detail_row', locals: { caption: t('.oustanding_payments'), value: number_to_currency(@cfe_result.vehicle_loan_amount_outstanding) } %>
      <%= render partial: 'results_detail_row', locals: { caption: t('.disregards'), value: number_to_currency(@cfe_result.vehicle_disregard) } %>
      <%= render partial: 'results_total_row', locals: { caption: t('.assessment_amount'), value: number_to_currency(@cfe_result.total_vehicles) } %>
      </tbody>
    </table>
  </div>
<% end %>
