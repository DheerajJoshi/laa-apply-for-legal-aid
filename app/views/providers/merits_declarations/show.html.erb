<% content_for :navigation do %>
    <%= provider_back_link text: t('generic.back') %>
  <% end %>

  <% content_for(:page_title) { t('.h1-heading') } %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl"><%= t('.heading_1') %></h1>

      <%= form_with(
            model: @form,
            url: providers_legal_aid_application_merits_declaration_path,
            method: :patch,
            local: true
          ) do |form| %>

        <%= govuk_form_group(
              input: :client_merits_declaration
            ) do %>

            <%= simple_format t('.text_1') %>

            <ul class="govuk-list govuk-list--bullet">
                <li><%= simple_format t('.leaflet_link') %></li>
            </ul>

            <%= simple_format t('.text_2') %>

            <ul class="govuk-list govuk-list--bullet">
              <% t('.list').each_line do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>

            <%= simple_format t('.text_3') %>

        <% end %>

        <%= form.button t('generic.continue'), name: :client_merits_declaration, value: 'true', class: 'govuk-button' %>

      <% end %>
    </div>
  </div>
