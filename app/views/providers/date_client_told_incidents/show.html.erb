<%= page_template page_title: t('.h1-heading'), template: :basic do %>

  <%= form_with(
        model: @form,
        url: providers_legal_aid_application_date_client_told_incident_path,
        method: :patch,
        local: true
      ) do |form| %>

    <%= govuk_form_group show_error_if: @form.errors.present? do %>
      <%= govuk_fieldset_header page_heading %>

      <%= date_input_fields(
            prefix: :told,
            field_name: :told_on,
            width: :full,
            set_error_class_here: false,
            form: form
          ) %>
    <% end %>

    <%= next_action_buttons(show_draft: true, form: form) %>

  <% end %>

<% end %>
