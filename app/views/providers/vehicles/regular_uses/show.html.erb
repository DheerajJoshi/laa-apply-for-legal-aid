<%= page_template page_title: t('.heading'), template: :basic do %>
  <%= form_with(
        model: @form,
        url: providers_legal_aid_application_vehicles_regular_use_path,
        method: :patch,
        local: true
      ) do |form| %>
    <%= govuk_form_group show_error_if: @form.errors.present? do %>
      <%= govuk_fieldset_header page_heading, padding_below: 0 %>
      <%= govuk_hint t('.include_partner_use') %>
      <%= govuk_radio_inputs(
            :used_regularly,
            {
              true: t('generic.yes'),
              false: t('generic.no')
            },
            selected: (@vehicle.used_regularly.to_s.to_sym unless @vehicle.used_regularly.nil?)
          ) %>
      <div class="govuk-!-padding-bottom-4"></div>
      <%= next_action_buttons(show_draft: true, form: form) %>
    <% end %>
  <% end %>
<% end %>
