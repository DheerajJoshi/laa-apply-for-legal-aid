<%= page_template page_title: t('.heading'), template: :basic do %>
  <%= form_with(
        model: @form,
        url: providers_legal_aid_application_vehicles_remaining_payment_path,
        method: :patch,
        local: true
      ) do |form| %>
    <%= govuk_form_group show_error_if: @form.errors.present? do %>
      <%= govuk_fieldset_header page_heading, padding_below: 0 %>

      <div class="govuk-radios govuk-radios--conditional" data-module="radios">
        <%= form.govuk_radio_button(
              :payments_remain,
              true,
              label: t('generic.yes'),
              'data-aria-controls' => 'conditional-true',
              checked: @form.payments_remain?
            ) %>
        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-true">
          <%= form.govuk_text_field(
                :payment_remaining,
                hint: t('.detail_of_payments_to_include'),
                label: nil,
                input_prefix: t('currency.gbp')
              ) %>
        </div>

        <%= form.govuk_radio_button(
              :payments_remain,
              false,
              label: t('generic.no'),
            ) %>

      <div class="govuk-!-padding-bottom-4"></div>
      <%= next_action_buttons(show_draft: true, form: form) %>
    <% end  %>
  <% end %>
<% end %>
